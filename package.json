{
  "name": "sidekick-ruka",
  "version": "1.0.0",
  "main": "main.js",
  "author": "re-sidekick author",
  "license": "ISC",
  "description": "AI Dolphin Assistant 'Luka'",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "dist": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.sidekick-ruka.app",
    "productName": "sidekick-ruka",
    "files": [
      "**/*",
      "!dist*",
      "!out*",
      "!*.exe",
      "!*.log",
      "!build-log.txt",
      "!test-log.txt",
      "!create_cert.ps1"
    ],
    "extraFiles": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "appx"
      ],
      "icon": "app/assets/dolphin.png"
    },
    "appx": {
      "applicationId": "SidekickRuka",
      "identityName": "SidekickRuka",
      "publisher": "CN=SidekickRuka",
      "publisherDisplayName": "Sidekick Ruka Project",
      "customManifestPath": "build/appx/AppxManifest.xml"
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@google/generative-ai": "^0.24.1",
    "sharp": "^0.34.5"
  }
}